<!-- Begin page content -->
    <div class="container" data-ng-controller="adminCtrl as vm">
      <div class="page-header">
        <h1>Hackathon UTC</h1>
      </div>
      
     <!-- ADMIN PANEL -->
	  <div  >
        <div class="bg-danger" style="padding:10px;" ng-show="vm.errors">{{ vm.errors }}</div>
        <form class="form-inline" ng-show="!vm.loggedIn">
        <div class="form-group">
          <label class="sr-only" for="exampleInputEmail3">Name</label>
          <input type="text" class="form-control" id="exampleInputEmail3" ng-model="vm.name" placeholder="Name">
        </div>
        <div class="form-group">
          <label class="sr-only" for="exampleInputPassword3">Password</label>
          <input type="password" class="form-control" id="exampleInputPassword3" ng-model="vm.password" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-default" ng-click="vm.login(vm.name, vm.password)">Sign in</button>
      </form>
      <p class="bg-success" style="padding:10px;" ng-show="vm.loggedIn">You are connected <a ng-click="vm.logout();">Logout</a></p>
      
    
    </div>
    
    <!-- Project panel -->
    
    <div class="panel panel-default" ng-show="vm.loggedIn">
      <div class="panel-heading">
        <h3 class="panel-title">Projects</h3>
      </div>
      <div class="panel-body">
          <div class="bs-example" data-example-id="striped-table">
            <table class="table table-striped" >
              <thead>
                <tr>
                  <th>#</th>
                  <th>Project</th>
                  <th>Repository</th>
                  <th>Score</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <tr ng-repeat="project in vm.projects | orderBy:'-points'">
                  <th scope="row">{{ $index + 1 }}</th>
                  <td>{{ project.name  }}</td>
                  <td>{{ project.repository }}</td>
                  <td>{{ project.points }}</td>
                  <td></td>
                </tr>
                <tr>
                  <th scope="row">#</th>
                  <td> <input type="text" class="form-control" id="exampleInputEmail3" ng-model="vm.newProject.name" placeholder="Name"></td>
                  <td>
                    <input type="text" class="form-control" id="exampleInputEmail3" ng-model="vm.newProject.repository" placeholder="Repository">
                   
                  </td>
                  <td></td>
                  <td><button type="submit" class="btn btn-success" ng-click="vm.createProject(vm.newProject)">Create</button></td>
                </tr>
              </tbody>
            </table>
  </div>
      </div>
    </div>
    
    
    
      <!-- Participants panel -->
    
    <div class="panel panel-default" ng-show="vm.loggedIn">
      <div class="panel-heading">
        <h3 class="panel-title">Participants</h3>
      </div>
      <div class="panel-body">
         <div class="bs-example" data-example-id="striped-table">
            <table class="table table-striped" >
              <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Team</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <tr ng-repeat="participant in vm.participants">
                  <th scope="row">{{ $index + 1 }}</th>
                  <td>{{ participant.name  }}</td>
                  <td>{{ participant.team }}</td>
                  <td></td>
                </tr>
                <tr>
                  <th scope="row">#</th>
                  <td> <input type="text" class="form-control" id="exampleInputEmail3" ng-model="vm.newParticipant.name" placeholder="Name"></td>
                  <td>
                    <select class="form-control" ng-model="vm.newParticipant.team">
                        <option ng-repeat="project in vm.projects" value="{{project.id}}">{{project.name}}</option>
                    </select> 
                    
                   
                  </td>
                  <td><button type="submit" class="btn btn-success" ng-click="vm.createParticipant(vm.newParticipant)">Create</button></td>
                </tr>
              </tbody>
            </table>
        </div>
          
      </div>
    </div>
    
    
      <!-- Points panel -->
    
    <div class="panel panel-default" ng-show="vm.loggedIn">
      <div class="panel-heading">
        <h3 class="panel-title">Points</h3>
      </div>
      <div class="panel-body">
         <div class="bs-example" data-example-id="striped-table">
            <table class="table table-striped" >
              <thead>
                <tr>
                  <th>#</th>
                  <th>Team</th>
                  <th>Points</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th scope="row">#</th>
                  
                  <td>
                    <select class="form-control" ng-model="vm.addScore.team">
                        <option ng-repeat="project in vm.projects" value="{{project.id}}">{{project.name}}</option>
                    </select> 
                    
                   
                  </td>
                  <td> <input type="text" class="form-control" id="exampleInputEmail3" ng-model="vm.addScore.points" placeholder="Points"></td>
                  <td><button type="submit" class="btn btn-success" ng-click="vm.addScore(vm.addScore.team, vm.addScore.points)">Add</button></td>
                </tr>
              </tbody>
            </table>
        </div>
          
      </div>
    </div>
	  
      <p></p>
    </div>

    <footer class="footer">
      <div class="container">
        <p class="text-muted">Hackathon UTC 2015</p>
      </div>
    </footer>